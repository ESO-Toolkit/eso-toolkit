{
  "labels": {
    "mergeQueue": "auto-merge",
    "autoMerge": "auto-merge",
    "priority": ["priority", "hotfix", "critical"],
    "blocking": ["do not merge", "do-not-merge", "wip", "work in progress", "needs review", "waiting on parent", "waiting-on-parent"]
  },
  "requirements": {
    "reviews": 1,
    "checks": [
      "build",
      "lint", 
      "format",
      "test",
      "typecheck",
      "build-storybook",
      "playwright-smoke",
      "check-do-not-merge-label"
    ]
  },
  "mergeMethod": "squash",
  "targetBranch": "main",
  "processingInterval": 300,
  "notifications": {
    "onMerge": true,
    "onBlock": true,
    "statusUpdates": true
  },
  "safetyChecks": {
    "requireUpToDate": true,
    "requireLinearHistory": false,
    "maxQueueSize": 50
  }
}